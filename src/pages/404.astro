---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page not found">
  <section class="flex flex-col justify-center min-h-[50vh] max-w-3xl">
    <h1 class="font-serif font-black text-6xl md:text-7xl lg:text-8xl mb-6">
      404
    </h1>
    <p class="text-lg mb-8">The page you're looking for doesn't exist.</p>
    <a
      href={import.meta.env.BASE_URL}
      class="inline-block bg-accent text-white px-6 py-3 rounded-full text-sm font-medium hover:bg-accent/90 transition-colors self-start"
    >
      Go home
    </a>
  </section>
</BaseLayout>
