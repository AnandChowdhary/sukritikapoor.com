---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const workEntries = await getCollection("work");
const categories = workEntries.sort(
  (a, b) => (a.data.order ?? 0) - (b.data.order ?? 0),
);
---

<BaseLayout
  title="Work"
  description="Explore Sukriti Kapoor's work in SEO, editing, publishing, journalism, and more."
>
  <h1 class="font-serif font-black text-6xl md:text-7xl lg:text-8xl mb-16">
    Work
  </h1>

  <div class="grid md:grid-cols-2 gap-x-16 gap-y-14">
    {
      categories.map((category) => (
        <div>
          <a
            href={`${import.meta.env.BASE_URL}work/${category.id}`}
            class="font-serif font-black text-3xl md:text-4xl lg:text-5xl leading-[1.1] underline decoration-2 underline-offset-8 hover:text-accent transition-colors"
          >
            {category.data.title}
          </a>
          <p
            class="mt-4 text-base leading-relaxed"
            set:html={category.data.description}
          />
        </div>
      ))
    }
  </div>
</BaseLayout>
